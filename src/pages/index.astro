import Layout from '../layouts/Layout.astro';

---

<Layout  title="Kerala Startup Mission">

	<main class=" min-h-full min-w-full flex flex-col items-center justify-center bg-[#00afef]" >
		<div class="bg-center bg-no-repeat min-w-full min-h-screen  my-auto flex" style="background-image:url('/hrapps_login/img/bg_cover.svg')">
			<div class="mx-auto my-auto border-2 max-w-[85%] flex md:h-[550px]  h-full bg-white rounded-md z-50 ">
				<div class="flex lg:flex-row flex-col w-full">
					<div class=" lg:flex hidden lg:w-4/12 ">
